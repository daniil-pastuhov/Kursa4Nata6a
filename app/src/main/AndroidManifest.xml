<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.genlife.just4you">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WordActivity"
            android:label="@string/activity_title_word"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CreateTopicActivity"
            android:label="@string/activity_title_create_topic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ThemeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ThemeViewActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>
